<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
       Thông tin cá nhân
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Thông tin tài khoản</a></li>
        <li><a href="#">Cá nhân</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary box-custom">
                <div class="box-body box-profile">
                    <div class="avatar">
                        <img class="profile-user-img img-responsive img-circle" src="/hsg/images/default-avatar.png" alt="User profile picture">
                    </div>

                    <div class="children">
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Followers</b> <a class="pull-right">1,322</a>
                            </li>
                            <li class="list-group-item">
                                <b>Following</b> <a class="pull-right">543</a>
                            </li>
                            <li class="list-group-item">
                                <b>Friends</b> <a class="pull-right">13,287</a>
                            </li>
                        </ul>

                    </div>

                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">
                    <button class="btn btn-custom btn-flat">Thêm con</button>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-9">
            <!-- Default box -->
            <div class="box box-primary box-custom">
                <div class="box-body">
                    <div class="form-group">
                        <label>Họ tên</label>
                        <input id="txtUsername" disabled placeholder="Họ tên" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input id="txtEmail" disabled placeholder="Email" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        <input id="txtPhone" placeholder="Điện thoại" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Vùng miền</label>
                        <select id="cbxRegion">
                            <option></option>
                            {{#each data.region}}
                                <option  value="{{this.regionKey}}">{{this.regionName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Công ty</label>
                        <select id="cbxCompany">
                            <option></option>
                            {{#each data.company}}
                                <option  value="{{this.companyKey}}">{{this.companyName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Phòng ban</label>
                        <input id="txtDepartment" placeholder="Phòng ban" class="form-control"/>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button id="btnSave" class="btn btn-custom btn-flat pull-right">Lưu</button>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </div>
    </div>


</section>
<!-- /.content -->

